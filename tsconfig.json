{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es6",
      "esnext",
      "ES2020"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./app",
    "paths": {
      "components": ["components"],
      "fileApi": ["fileApi"],
      "graphql-api": ["graphql-api"],
      "react-graphql": ["react-graphql"],
      "localization": ["localization"],
      "screens": ["screens"],
      "screens/*": ["screens/*"],
      "navRoutes": ["navigation/appRoutes"],
      "navTypes": ["navigation/navTypes"],
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "include": [
      "./app",
      "./app/**/*.{ts|tsx|js|jsx}",
      "./app/__tests__/**/*.{ts|tsx|js|jsx}"
    ],
    "exclude": [
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
      "node_modules"
    ]
  }
}
